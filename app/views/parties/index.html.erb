<h2>My Parties</h2>
<%= link_to 'New Party', new_party_path %>
<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>Name</th>
      <th>Location</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.user.name %></td>
        <td><%= party.name %></td>
        <td><%= party.location %></td>
        <td><%= party.start_time %></td>
        <td><%= party.end_time %></td>
        <td><%= truncate(party.details, length: 17) %></td>
        <td><%= link_to 'Show', party %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>



